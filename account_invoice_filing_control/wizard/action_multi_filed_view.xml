<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
    <record id="multi_filed_internally_view" model="ir.ui.view">
		<field name="name">Multiple Radicado de Facturas en Cartera</field>
		<field name="model">account.move.multi.filed.internally</field>
		<field name="arch" type="xml">
			<form string="Multiple Radicado de Facturas en Cartera">
                <group>
                    <h5>Marcar como facturas radicadas en Cartera</h5>
                </group>
                <group>
                    <field name="invoice_ids"/>
                </group>
				<footer>
					<button name="register_multi_filed_internally" 
						string="Aplicar Radicados" 
						type="object" 
						class="btn-primary"/>
					<button string="Cancelar" class="btn-default" special="cancel"/>
				</footer>
			</form>
		</field>
	</record>
    

<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_res_partner_form_inherit" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="payroll_pila" string="Pila" attrs="{'invisible': [('check_colombia_form', '!=', True)]}">
                    <group>
                        <group>
                            <field name="check_colombia_form" invisible="True"/>
                            <field name="check_arl"/>
                            <field name="identificator_arl" attrs="{'invisible': [('check_arl', '!=', True)]}"/>
                            <field name="check_afp"/>
                            <field name="identificator_afp" attrs="{'invisible': [('check_afp', '!=', True)]}"/>
                            <field name="check_box"/>
                            <field name="identificator_box" attrs="{'invisible': [('check_box', '!=', True)]}"/>
                            <field name="check_eps"/>
                            <field name="identificator_eps" attrs="{'invisible': [('check_eps', '!=', True)]}"/>
                            <field name="check_afc"/>
                            <field name="identificator_afc" attrs="{'invisible': [('check_afc', '!=', True)]}"/>
                            <field name="check_loan"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
